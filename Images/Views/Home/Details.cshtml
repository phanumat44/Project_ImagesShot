@model Images.Picture

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_nav_search.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tutorial</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500" rel="stylesheet">
    <!-- CSS -->
    @*  <script src="~/Content/preview-css/script.js"></script>*@
    <meta name="robots" content="noindex,follow" />
    <link href="~/Content/preview-css/style.css" rel="stylesheet" />
</head>

<body>
    <main class="container">

        <!-- Left Column / Headphones Image -->
        @* <div class="left-column">
                <img src=@Url.Content("~/Content/images/"+(Model.url)) />

            </div>*@
        <img class="shadow" src=@Url.Content("~/Content/images/"+(Model.url)) />

        <!-- Right Column -->
        <div class="right-column">

            <!-- Product Description -->
            <div class="product-description">
                @* <span>Headphones</span>*@
                <h1>@Html.DisplayFor(model => model.Name)</h1>
                <p>@Html.DisplayFor(model => model.Desc)</p>
            </div>

            <!-- Product Configuration -->
            <div class="product-configuration">

                <!-- Product Color -->
                <div class="product-color">
                    <span>ขนาดรูปภาพ: @Html.DisplayFor(model => model.Size) px</span>



                </div>

                <!-- Cable Configuration -->
                <div class="cable-config">
                    <span>หมวดหมู่: @Html.DisplayFor(model => model.Type)</span>

                    @* <div class="cable-choose">
                    <button>Straight</button>
                    <button>Coiled</button>
                    <button>Long-coiled</button>
                </div>*@

                </div>
            </div>

            <!-- Product Pricing -->
            <div class="product-price">
                <span>@Html.DisplayFor(model => model.Price) THB</span>

            </div>
            <br />
            @Html.HiddenFor(model => model.Pic_ID)
          
            @Html.ActionLink("Order", "AddOrder", new { idx = Model.Pic_ID, total = Model.Price },new { @style = "align-text:center;width:170px;height:70px;font-size:20px;",
           @class="btn btn-dark"
       })
        </div>
    </main>

    <!-- Scripts -->
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" charset="utf-8"></script>
        <script src="script.js" charset="utf-8"></script>*@
</body>
</html>
