<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Images Shot</title>
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="~/Content/js/scripts.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-black">
        <div class="container px-4 px-lg-5">
            <!--โลโก้-->
            <img class="navbar-brand" src="@Url.Content("~/Content/images/img.png")" height="76" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="d-flex2">
                    <ul class="navbar-nav me-auto ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href='@Url.Action("Manage","Admin")'>หน้าแรก</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">ภาพ</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" onclick="location.href = '@Url.Action("Art","Category")'">ศิลปะ</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" onclick="location.href = '@Url.Action("Nature","Category")'">ธรรมชาติ</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" onclick="location.href = '@Url.Action("Animal","Category")'">สัตว์</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" onclick="location.href = '@Url.Action("Science","Category")'">วิทยาศาตร์</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" onclick="location.href = '@Url.Action("Tech","Category")'">เทคโนโลยี</a></li>
                            </ul>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <!-- Footer-->
    @*<footer class="py-5 bg-dark">
        
    </footer>*@
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

</body>
</html>
